<% title( @presentation.title )%>
<div id="map">
</div>
<script language="javascript">
  function loadBaseLayer() {
    zuip = new OpenLayers.Layer.ScalableInlineXhtml( '<%= @presentation.title %>', '<%= zuip_path(name) %>', new OpenLayers.Bounds(0,0,32768,24576), new OpenLayers.Size(8,6),{isBaseLayer: true, numZoomLevels: 14} );
    map.addLayers([zuip]);
  }
</script>

<div id="outline_panel" class="olControlOutlinePanel olControlNoSelect" unselectable="on">
  <%= link_to_function image_tag('layer-switcher-maximize.png', :alt => t(:show_outline), :title => t(:show_outline)), "$('#outline').show(); $(this).next().show(); $(this).hide()", :class => 'maximizeDiv' %>
  <%= link_to_function image_tag('layer-switcher-minimize.png', :alt => t(:hide_outline), :title => t(:hide_outline)), "$('#outline').hide(); $(this).prev().show(); $(this).hide()", :class => 'minimizeDiv' %>
  <ol id="outline" class="outlineDiv">
    <li><%=t :outline %></li>
    <% for item in @presentation.outline do %>
      <%= render "outline", :item => item %>
    <% end %>
  </ol>
</div>
